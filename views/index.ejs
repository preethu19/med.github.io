<% include ./partials/header %>

	<div class="ui main text container">
		<a href="/visits/new" class="ui primary right floated button">New Visit</a>
		<div class="ui huge header">Report</div>
		
		<div class="ui top attached segment">
			<div class="ui divided items">
				<% patients.forEach(function(patient){ %>
					<div class="ui item">
						<div class="ui content">
							<p class="ui header">
								<%= patient.disorder %>
							</p>
							<p>
								Treated by : <%= patient.doctor %>
							</p>
							<div class="meta">
								<span class="cinema">
									<%= patient.created.toDateString() %>
								</span>
							</div>
							<div class="description">
							<p>
								<%= patient.description %>...
							</p>
						</div>
							<div class="extra">
							<a class="ui floated basic violet button" href="/visits/<%= patient._id %>">
									Read More
									<i class="right chevron icon" ></i>
							</a>
						</div>
							<div>
								<img class="ui image" src="<% patient.image %>">
							</div>
						</div>
						
					</div>

					<% }); %>
			</div>
		</div>
	</div>

	<% include partials/footer %>